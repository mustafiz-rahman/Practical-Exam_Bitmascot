@model Practical_Exam_Bitmascot.Models.ChangePassworModel

@{
    ViewBag.Title = "ChangePassword";
}
@if (TempData["ChangePassword"] != null)
{
    <script type="text/javascript">
       alert("@TempData["testmsg"]");
    </script>
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="col-md-3 col-md-offset-0">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Option </h3>
                </div>
                <div class="panel-body">
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="#">@Html.ActionLink("Profile", "LoggeIn", "Home")</a></li>
                        <li><a href="#">@Html.ActionLink("Change Password", "ChangePassword", "Home")</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center panel-title">Password Change</h3>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "col-md-8 col-md-offset-2" })
                        <div class="col-md-8 col-md-offset-2">
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "col-md-8 col-md-offset-2" })
                        <div class="col-md-8 col-md-offset-2">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfrmNewPassword, htmlAttributes: new { @class = "col-md-8 col-md-offset-2" })
                        <div class="col-md-8 col-md-offset-2">
                            @Html.EditorFor(model => model.ConfrmNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfrmNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-2 col-md-8 col-md-offset-2">
                            <input type="submit" value="Change Password" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
}

